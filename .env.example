# Universal Test Automation Framework - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Base URL for the application under test
# Override the default base URL defined in the adapter
# BASE_URL=https://www.example.com

# =============================================================================
# TEST CREDENTIALS
# =============================================================================

# Valid test user credentials
# CRITICAL: Never hardcode credentials in code!
# Always use environment variables for sensitive data
TEST_USERNAME=your_test_username
TEST_PASSWORD=your_test_password

# Admin user credentials (if applicable)
# ADMIN_USERNAME=admin_username
# ADMIN_PASSWORD=admin_password

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================

# Browser to use: chrome, firefox, edge
BROWSER=chrome

# Run in headless mode: true, false
HEADLESS=false

# Slow mode delay between commands (seconds)
SLOW_MODE_DELAY=0

# =============================================================================
# TIMEOUT CONFIGURATION
# =============================================================================

# Default timeout for waits (seconds)
TIMEOUT_DEFAULT=10

# Short timeout for quick checks (seconds)
TIMEOUT_SHORT=5

# Medium timeout for normal operations (seconds)
TIMEOUT_MEDIUM=15

# Long timeout for slow operations (seconds)
TIMEOUT_LONG=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================

# Root directory for reports
REPORTS_ROOT=results

# Directory for screenshots
SCREENSHOTS_DIR=results/screenshots

# =============================================================================
# APPLICATION-SPECIFIC CONFIGURATION
# =============================================================================

# Add any application-specific environment variables here
# Examples:
# API_KEY=your_api_key
# API_BASE_URL=https://api.example.com
# DATABASE_URL=postgresql://localhost/testdb

# =============================================================================
# SECURITY TESTING CONFIGURATION (Optional)
# =============================================================================

# Only use on authorized systems!
# SECURITY_TESTING_ENABLED=false
# TARGET_HOST=localhost

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your values (never commit .env!)
# 3. The framework will automatically load .env values
# 4. Environment variables override default configuration
# 5. Command line arguments override environment variables
