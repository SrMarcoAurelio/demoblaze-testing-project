[MASTER]
# Parallel analysis
jobs=4

# Directories to ignore
ignore-patterns=test_.*?\.py
ignore-paths=^venv/,^\.venv/,^env/,^\.env/

# Extensions to ignore
ignore=
    tests,
    .venv,
    __pycache__,
    .pytest_cache

[MESSAGES CONTROL]
# Disable warnings that are not relevant for testing
disable=
    C0114,  # missing-module-docstring (not mandatory in tests)
    C0115,  # missing-class-docstring (fixture classes without docstring)
    C0116,  # missing-function-docstring (self-explanatory tests)
    R0913,  # too-many-arguments (fixtures can have many args)
    R0914,  # too-many-locals (complex tests need variables)
    W0212,  # protected-access (access to _private necessary in testing)
    C0301,  # line-too-long (sometimes necessary in long assertions)
    R0903,  # too-few-public-methods (fixtures/helpers can be small)
    W0621,  # redefined-outer-name (pytest fixtures reassign names)

[FORMAT]
# Maximum characters per line (pytest and Selenium need long lines)
max-line-length=120

# Indentation
indent-string='    '

[DESIGN]
# Complexity limits
max-attributes=8
max-arguments=6
max-locals=20
max-branches=15
max-statements=60

[SIMILARITIES]
# Minimum lines to detect duplication
min-similarity-lines=5

[LOGGING]
# Logging format
logging-format-style=new

[VARIABLES]
# Allow short names in certain contexts
good-names=i,j,k,ex,Run,_,x,y,df,db

[IMPORTS]
# Trusted modules (don't generate warnings)
known-third-party=
    selenium,
    pytest,
    webdriver_manager,
    pytest_html

[PYLINT]
# Minimum acceptable score
fail-under=7.0
