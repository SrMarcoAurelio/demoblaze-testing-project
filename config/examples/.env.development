# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================
#
# This file contains configuration for DEVELOPMENT environment
# Copy to .env in project root and customize for your needs
#
# IMPORTANT: Never commit .env files with real credentials!
#

# ============================================================================
# APPLICATION URL
# ============================================================================
# Base URL of your application under test
BASE_URL=https://dev.your-application.com

# ============================================================================
# TEST CREDENTIALS
# ============================================================================
# Development test users (use test data, not real users!)
TEST_USERNAME=dev_testuser
TEST_PASSWORD=Dev_Test123!

# Admin user for elevated privilege tests
ADMIN_USERNAME=dev_admin
ADMIN_PASSWORD=Dev_Admin123!

# ============================================================================
# BROWSER CONFIGURATION
# ============================================================================
# Browser choice: chrome, firefox, edge
BROWSER=chrome

# Headless mode (true for CI/CD, false for local debugging)
HEADLESS=false

# Slow mode delay (seconds between actions, useful for debugging)
SLOW_MODE_DELAY=0.0

# ============================================================================
# TIMEOUTS
# ============================================================================
# Default implicit wait (seconds) - keep low, use explicit waits instead
TIMEOUT_DEFAULT=5

# Explicit wait timeout (seconds)
TIMEOUT_EXPLICIT=10

# Page load timeout (seconds)
TIMEOUT_PAGE_LOAD=30

# ============================================================================
# LOGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Enable verbose logging
VERBOSE=true

# ============================================================================
# PERFORMANCE
# ============================================================================
# Performance testing thresholds (seconds)
PERF_PAGE_LOAD_THRESHOLD=5.0
PERF_LOGIN_THRESHOLD=3.0
PERF_API_THRESHOLD=1.0

# ============================================================================
# SELENIUM GRID (Optional - for parallel execution)
# ============================================================================
# Selenium Grid URL (leave empty to use local browser)
# SELENIUM_HUB_URL=http://localhost:4444/wd/hub

# ============================================================================
# DATABASE (Optional - for database testing)
# ============================================================================
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=test_db
# DB_USER=test_user
# DB_PASSWORD=test_password

# ============================================================================
# API TESTING (Optional)
# ============================================================================
# API_BASE_URL=https://dev-api.your-application.com
# API_KEY=dev_api_key_here
# API_SECRET=dev_api_secret_here

# ============================================================================
# REPORT CONFIGURATION
# ============================================================================
# Screenshot on failure
SCREENSHOT_ON_FAILURE=true

# Video recording (requires additional setup)
VIDEO_RECORDING=false

# Allure reports
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# ============================================================================
# FEATURE FLAGS (Optional - for selective test execution)
# ============================================================================
# TEST_LOGIN=true
# TEST_CART=true
# TEST_CHECKOUT=true
# TEST_SECURITY=true
# TEST_ACCESSIBILITY=true
