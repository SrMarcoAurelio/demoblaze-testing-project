# ============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# ============================================================================
#
# This file contains configuration for STAGING environment
# Copy to .env in project root when testing against staging
#
# IMPORTANT: Never commit .env files with real credentials!
#

# ============================================================================
# APPLICATION URL
# ============================================================================
BASE_URL=https://staging.your-application.com

# ============================================================================
# TEST CREDENTIALS
# ============================================================================
# Staging test users
TEST_USERNAME=staging_testuser
TEST_PASSWORD=Staging_Test123!

ADMIN_USERNAME=staging_admin
ADMIN_PASSWORD=Staging_Admin123!

# ============================================================================
# BROWSER CONFIGURATION
# ============================================================================
BROWSER=chrome
HEADLESS=true  # Usually headless in staging
SLOW_MODE_DELAY=0.0

# ============================================================================
# TIMEOUTS
# ============================================================================
# Staging may be slower than dev
TIMEOUT_DEFAULT=10
TIMEOUT_EXPLICIT=20
TIMEOUT_PAGE_LOAD=60

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # Less verbose than dev
VERBOSE=false

# ============================================================================
# PERFORMANCE
# ============================================================================
# More relaxed thresholds for staging
PERF_PAGE_LOAD_THRESHOLD=8.0
PERF_LOGIN_THRESHOLD=5.0
PERF_API_THRESHOLD=2.0

# ============================================================================
# SELENIUM GRID
# ============================================================================
# Staging often uses Selenium Grid for parallel execution
SELENIUM_HUB_URL=http://selenium-grid-staging:4444/wd/hub

# ============================================================================
# DATABASE
# ============================================================================
# DB_HOST=staging-db.your-application.com
# DB_PORT=3306
# DB_NAME=staging_db
# DB_USER=staging_user
# DB_PASSWORD=staging_password

# ============================================================================
# API TESTING
# ============================================================================
# API_BASE_URL=https://staging-api.your-application.com
# API_KEY=staging_api_key_here
# API_SECRET=staging_api_secret_here

# ============================================================================
# REPORT CONFIGURATION
# ============================================================================
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=true  # Enable video for staging failures
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# ============================================================================
# CI/CD INTEGRATION
# ============================================================================
# CI_BUILD_NUMBER=${CI_BUILD_NUMBER:-local}
# CI_COMMIT_SHA=${CI_COMMIT_SHA:-unknown}
# CI_BRANCH_NAME=${CI_BRANCH_NAME:-unknown}
