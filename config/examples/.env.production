# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
#
# This file contains configuration for PRODUCTION environment testing
# Copy to .env in project root when running smoke tests against production
#
# ⚠️ WARNING: Only run smoke/critical tests against production!
# ⚠️ NEVER run destructive tests (write operations) against production!
#
# IMPORTANT: Never commit .env files with real credentials!
#

# ============================================================================
# APPLICATION URL
# ============================================================================
BASE_URL=https://www.your-application.com

# ============================================================================
# TEST CREDENTIALS
# ============================================================================
# Production test users (READ-ONLY operations only!)
TEST_USERNAME=prod_readonly_user
TEST_PASSWORD=ProdTest123!

# DO NOT use admin credentials in production tests
# ADMIN_USERNAME=
# ADMIN_PASSWORD=

# ============================================================================
# BROWSER CONFIGURATION
# ============================================================================
BROWSER=chrome
HEADLESS=true  # Always headless in production
SLOW_MODE_DELAY=0.0

# ============================================================================
# TIMEOUTS
# ============================================================================
# Production should be fast
TIMEOUT_DEFAULT=10
TIMEOUT_EXPLICIT=15
TIMEOUT_PAGE_LOAD=30

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=WARNING  # Minimal logging in production
VERBOSE=false

# ============================================================================
# PERFORMANCE
# ============================================================================
# Strict thresholds for production
PERF_PAGE_LOAD_THRESHOLD=3.0
PERF_LOGIN_THRESHOLD=2.0
PERF_API_THRESHOLD=0.5

# ============================================================================
# SELENIUM GRID
# ============================================================================
# Production monitoring often uses cloud Selenium Grid
# SELENIUM_HUB_URL=https://cloud-selenium.your-service.com/wd/hub

# ============================================================================
# DATABASE
# ============================================================================
# ⚠️ NEVER connect to production database for write operations!
# Only use for read-only verification if absolutely necessary
# DB_HOST=production-db-readonly.your-application.com
# DB_PORT=3306
# DB_NAME=production_db
# DB_USER=readonly_user
# DB_PASSWORD=readonly_password

# ============================================================================
# API TESTING
# ============================================================================
# API_BASE_URL=https://api.your-application.com
# API_KEY=prod_readonly_api_key
# API_SECRET=prod_readonly_api_secret

# ============================================================================
# REPORT CONFIGURATION
# ============================================================================
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=true
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# ============================================================================
# PRODUCTION SAFETY FLAGS
# ============================================================================
# Prevent destructive operations
READ_ONLY_MODE=true
ALLOW_WRITE_OPERATIONS=false
ALLOW_DELETE_OPERATIONS=false

# Only run smoke tests in production
RUN_SMOKE_TESTS_ONLY=true

# ============================================================================
# MONITORING & ALERTING
# ============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# EMAIL_ALERTS=devops@your-company.com
# PAGERDUTY_KEY=your_pagerduty_key

# ============================================================================
# CI/CD INTEGRATION
# ============================================================================
# CI_BUILD_NUMBER=${CI_BUILD_NUMBER:-local}
# CI_COMMIT_SHA=${CI_COMMIT_SHA:-unknown}
# CI_BRANCH_NAME=${CI_BRANCH_NAME:-unknown}
